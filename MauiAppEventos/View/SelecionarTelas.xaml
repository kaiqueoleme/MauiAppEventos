<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppEventos.View.SelecionarTelas"
             Title="SelecionarTelas"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Primary}">
    <VerticalStackLayout >
        <Frame Margin="10,40" BackgroundColor="{StaticResource White}">
            <StackLayout Orientation="Vertical"
                             Spacing="10">

                <Label Text="Cadastro de Eventos"
                       TextTransform="Uppercase"
                       HorizontalOptions="Center"
                       FontSize="Medium"
                       TextColor="{StaticResource PrimaryDark}"/>

                <Button Text="Cadastrar Evento"
                            FontSize="Medium"
                        />

                <Button Text="Ver Eventos Cadastrados"
                            FontSize="Medium"/>
            </StackLayout>
        </Frame>
    </VerticalStackLayout>
</ContentPage>